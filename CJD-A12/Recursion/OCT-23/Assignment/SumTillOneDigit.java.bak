class  SumTillOneDigit{
	public static int oneDigit(int n){
		if(n>9){
			return oneDigit(sum(n,0));
		}
		return n;
	}
	public static int sum(int n, int sum){
		if(n!=0){
			int r = n%10;
			sum = sum + r;
			return sum(n/10, sum);
		}
		else{
			return sum;
		}
	}
	public static void main(String[] args){
		int n = 289;
		System.out.println(oneDigit(n));
	}
}
